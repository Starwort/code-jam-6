#:kivy 1.11.1

<TabbedRoot>:
    padding: 0
    vid_container: vid_container
    TabbedPanelItem:
        text: "Library"
        ColorBoxLayout:
            padding: dp(50)
            background_color: 0.6, 0.6, 0.6, 1
    TabbedPanelItem:
        text: "Editor"
        ColorBoxLayout:
            orientation: "vertical"
            spacing: dp(24)
            VideoContainer:
                id: vid_container
                size_hint_y: 0.7
            ColorBoxLayout:
                size_hint_y: 0.3
                background_color: 0.2, 0.2, 0.2, 1
    TabbedPanelItem:
        text: "Settings"
        ColorBoxLayout:
            background_color: 0.2, 0.2, 0.2, 1
